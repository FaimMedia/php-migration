{
	"name": "faimmedia/migration",
	"type": "library",
	"license": "MIT",
	"description": "FaimMedia Simple PHP Database Migration",
	"version": "0.2",
	"homepage": "https://faimmedia.nl",

	"authors": [{
		"name": "Tim Peters",
		"role": "Lead Developer"
	}],

	"require": {
		"php": "^8.2",
		"ext-pdo": "*"
	},

	"require-dev": {
		"ext-pdo_pgsql": "*",
		"ext-pgsql": "*",
		"phpunit/phpunit": "^11.3"
	},

	"bin": [
        "bin/migrate"
    ],

	"autoload": {
		"psr-4": {
			"FaimMedia\\Migration\\": "src/",
			"FaimMedia\\Migration\\Test\\": "test/"
		}
	},

	"config": {
		"lock": false
	}
}
